generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  COACH
  ADMIN
}


model User {
  id String @id @default(cuid())

  email    String  @unique
  name     String?
  password String? // hashed password

  role Role @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
