generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  COACH
  ADMIN
}

enum Gender {
  MALE
  FEMALE
}

model User {
  id String @id @default(cuid())

  email    String  @unique
  name     String?
  password String? // hashed password

  role Role @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  profile      Profile?
  workoutPlans WorkoutPlan[]
}

model Profile {
  id     String @id @default(cuid())
  userId String @unique

  age    Int?
  gender Gender

  heightCm Int?
  weightKg Int?

  goal            String?
  experienceLevel String?

  timePerWeek Int?
  equipment   String?

  user User @relation(fields: [userId], references: [id])

  updatedAt DateTime @updatedAt
}

model WorkoutPlan {
  id      String @id @default(cuid())
  userId  String
  title   String
  content Json

  createdAt DateTime  @default(now())
  expiresAt DateTime?

  user User @relation(fields: [userId], references: [id])
}
